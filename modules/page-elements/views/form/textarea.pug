//- widgets/textarea.pug
mixin textarea(attr)
  .field(class='field_' + attr.name)
    label.field-label.field-label-textarea= attr.label
    .field-value
      .field-value-input(class='field-value-input-' + attr.name)
        if post[attr.name]
          - value = post[attr.name]
        else
          if attr.value != ''
            - value = __(attr.value)
        - delete(attr.value)
        if attr.placeholder != ''
          - attr.placeholder = __(attr.placeholder)
        textarea.input-textarea&attributes(attr)= value
